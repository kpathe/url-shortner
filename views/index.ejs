<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background: #f4f6f9;
        margin: 0;
        padding: 0;
        color: #333;
      }

      header {
        background: #4a90e2;
        color: white;
        padding: 1rem;
        text-align: center;
      }

      h1 {
        margin: 0;
        font-size: 2rem;
      }

      .container {
        max-width: 800px;
        margin: 2rem auto;
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      }

      form {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      input[type="url"] {
        flex: 1;
        padding: 0.6rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
      }

      button {
        background: #4a90e2;
        color: white;
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.3s ease;
      }

      button:hover {
        background: #357abd;
      }

      .generated-url {
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
      }

      .generated-url a {
        color: #4a90e2;
        text-decoration: none;
        font-weight: bold;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
      }

      th, td {
        padding: 0.8rem;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background: #f0f0f0;
      }

      tr:hover {
        background: #f9f9f9;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>URL Shortener</h1>
    </header>

    <div class="container">
      <form method="post" action="/url">
        <input name="url" placeholder="https://example.com" type="url" required />
        <button type="submit">Generate Short URL</button>
      </form>

      <% if (locals.id) { %>
      <div class="generated-url">
        Generated URL :
        <a href="http://localhost:8000/url/<%= locals.id %>" target="_blank">
          http://localhost:8000/url/<%= locals.id %>
        </a>
      </div>
      <% } %>

      <% if (locals.urls) { %>
      <table>
        <thead>
          <tr>
            <th>S.No</th>
            <th>Short URL</th>
            <th>Original URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((item,index) => { %>
          <tr>
            <td><%= index+1 %></td>
            <td>
              <a href="http://localhost:8000/url/<%= item.shortID %>" target="_blank">
                <%= item.shortID %>
              </a>
            </td>
            <td><%= item.redirectURL %></td>
            <td><%= item.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
